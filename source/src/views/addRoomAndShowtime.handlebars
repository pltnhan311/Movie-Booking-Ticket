
<div class="h-screen flex-grow-1 overflow-y-lg-auto">
    <div class="container">
                <div class="form-group text-small">
                    <small><a href="/admin/showtimeManager/">Quay lại</a></small>
                </div>
                <h4 class="text-success">Thêm suất chiếu mới</h4>
        <div class="row justify-content-center">
            <div class="col-xl-8 col-lg-8 col-md-8 border mt-3 pt-3 rounded">
                <form action="/admin/showtimeManager/addRoom/{{id}}" method="post" novalidate>
                    <label for="title">Phòng</label>
                    <div class="form-group">
                        <select id="room" name="room" class="form-control">
                            <option value="">--Chọn Phòng--</option>
                            {{#each rooms}}
                                <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <label for="title">Loại trình chiếu</label>
                    <div class="form-group">
                        <select id="typeMovie" name="typeMovie" class="form-control">
                            <option value="">--Chọn Loại Trình Chiếu--</option>
                            {{#each typeMovies}}
                                <option value="{{this.id}}">
                                    {{this.name}}
                                </option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="showTime">Thời gian chiếu</label>
                        <div>
                            <select name="hour" id="hour" class="form-control" style="width:25%; display: inline-block">
                                <option value="08">08</option>
                                <option value="09">09</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                                <option value="16">16</option>
                                <option value="17">17</option>
                                <option value="18">18</option>
                                <option value="19">19</option>
                                <option value="20">20</option>
                                <option value="21">21</option>
                                <option value="22">22</option>
                            </select>
                            <select name="minute" id="minute" class="form-control" style="width:25%; display: inline-block">
                                <option value="00">00</option>
                                <option value="05">05</option>
                                <option value="10">10</option>
                                <option value="15">15</option>
                                <option value="20">20</option>
                                <option value="25">25</option>
                                <option value="30">30</option>
                                <option value="35">35</option>
                                <option value="40">40</option>
                                <option value="45">45</option>
                                <option value="50">50</option>
                                <option value="55">55</option>
                            </select>
                        </div>
                    </div>


                    <div class="form-group">
                        {{#if error}}
                            <br>
                            <div class="alert alert-danger alert-dismissible fade show">
                                {{error}}
                            </div>
                            <br>
                        {{/if}}
                    </div>
                    <br>
                    <div class="form-group">
                            <button class="btn btn-success mr-2">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>