<div class='h-screen flex-grow-1 overflow-y-lg-auto'>
  <div class='container'>
    <div class='form-group text-small'>
      <small><a href='/admin/promotionManager'>Quay lại</a></small>
    </div>
    <h4 class='text-success'>Chỉnh sửa khuyến mãi</h4>
    <div class='row justify-content-center'>
      <div class='col-xl-8 col-lg-8 col-md-8 border mt-3 pt-3 rounded'>
        <form
          action='/admin/promotionManager/edit/{{promotion._id}}'
          method='post'
          novalidate
        >
          <div class='form-group'>
            <label for='namePromotion'>Tên dịch vụ</label>
            <input
              value='{{promotion.namePromotion}}'
              type='text'
              id='namePromotion'
              name='namePromotion'
              class='form-control'
              placeholder='Nhập tên dịch vụ'
            />
          </div>
          <div class='form-group'>
            <label for='contentPromotion'>Nội dung</label>
            <input
              value='{{promotion.contentPromotion}}'
              type='text'
              id='contentPromotion'
              name='contentPromotion'
              class='form-control'
              placeholder='Nhập nội dung khuyến mãi'
            />
          </div>
          <div class='form-group'>
            <label for='theaterApply'>Rạp áp dụng</label>
            <input
              value='{{promotion.theaterApply}}'
              type='text'
              id='theaterApply'
              name='theaterApply'
              class='form-control'
              placeholder='Nhập những rạp áp dụng khuyến mãi'
            />
          </div>
          <div class='form-group'>
            <label for='timePromotion'>Thời gian</label>
            <input
              value='{{promotion.timePromotion}}'
              type='text'
              id='timePromotion'
              name='timePromotion'
              class='form-control'
              placeholder='Nhập thời gian áp dụng khuyến mãi'
            />
          </div>
          <div class='form-group'>
            <label for='imgPromotion'>Hình ảnh</label>
            <input
              value='{{promotion.imgPromotion}}'
              type='text'
              id='imgPromotion'
              name='imgPromotion'
              class='form-control'
              placeholder='Nhập link ảnh khuyến mãi'
            />
          </div>
          <div class='form-group'>
            {{#if error}}
              <br />
              <div class='alert alert-danger alert-dismissible fade show'>
                {{error}}
              </div>
              <br />
            {{/if}}
          </div>
          <div class='form-group'>
            <button type='submit' class='btn btn-success mr-2'>Cập nhật</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>